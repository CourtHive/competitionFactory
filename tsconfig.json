{
  "include": ["src", "types"],
  "exclude": ["node_modules", "public", "**/*.d.ts", "dist"],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noEmit": true,
    "esModuleInterop": true
  }
}
