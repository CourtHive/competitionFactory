{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "baseUrl": "src",
  },
  "include": [
    "src",
    "index.d.ts"
  ]
}
